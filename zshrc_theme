# Prompt
SPACESHIP_PROMPT_ADD_NEWLINE=false
SPACESHIP_PROMPT_SEPARATE_LINE=true
SPACESHIP_PROMPT_FIRST_PREFIX_SHOW=false

# User
SPACESHIP_USER_SHOW=always
SPACESHIP_USER_COLOR=blue
SPACESHIP_USER_PREFIX=""
SPACESHIP_USER_SUFFIX=""

# Host
SPACESHIP_HOST_SHOW=always
SPACESHIP_HOST_SHOW_FULL=true
SPACESHIP_HOST_COLOR=blue
SPACESHIP_HOST_COLOR_SSH=blue
SPACESHIP_HOST_PREFIX="@"
SPACESHIP_HOST_SUFFIX=" in"

# Execution Time
SPACESHIP_EXEC_TIME_SHOW=true
SPACESHIP_EXEC_TIME_COLOR=yellow
SPACESHIP_EXEC_TIME_ELAPSED=0
SPACESHIP_EXEC_TIME_PREFIX=" took "
SPACESHIP_EXEC_TIME_SUFFIX=""

# Exit Code
SPACESHIP_EXIT_CODE_SHOW=true
SPACESHIP_EXIT_CODE_SYMBOL=""
SPACESHIP_EXIT_CODE_COLOR=124 # red
SPACESHIP_EXIT_CODE_PREFIX=" ("
SPACESHIP_EXIT_CODE_SUFFIX=") "

# Git (git)
SPACESHIP_GIT_SHOW=true
SPACESHIP_GIT_BRANCH_COLOR=magenta
SPACESHIP_GIT_SYMBOL=""
SPACESHIP_GIT_PREFIX=" git("
SPACESHIP_GIT_SUFFIX=")"
# Git Branch
SPACESHIP_GIT_BRANCH_SHOW=true
SPACESHIP_GIT_BRANCH_PREFIX=""
# Git Status
SPACESHIP_GIT_STATUS_SHOW=true
SPACESHIP_GIT_STATUS_COLOR=magenta

# Mercurial (hg)
SPACESHIP_HG_SHOW=true
SPACESHIP_HG_PREFIX=""
SPACESHIP_HG_SUFFIX=""
SPACESHIP_HG_SYMBOL=""
# Mercurial Branch
SPACESHIP_HG_BRANCH_SHOW=true
SPACESHIP_HG_BRANCH_PREFIX=" hg("
SPACESHIP_HG_BRANCH_SUFFIX=")"
SPACESHIP_HG_BRANCH_COLOR=magenta
# Mercurial Status
SPACESHIP_HG_STATUS_SHOW=false

# Virtualenv (venv)
SPACESHIP_VENV_SHOW=true
SPACESHIP_VENV_PREFIX=" venv("
SPACESHIP_VENV_SUFFIX=")"
SPACESHIP_VENV_SYMBOL=""
SPACESHIP_VENV_GENERIC_NAMES=""
SPACESHIP_VENV_COLOR=040 # green

# Pyenv
SPACESHIP_PYENV_SHOW=true
SPACESHIP_PYENV_PREFIX=""
SPACESHIP_PYENV_SUFFIX=""
SPACESHIP_PYENV_SYMBOL="🐍·"
SPACESHIP_PYENV_COLOR=yellow

# Dir
SPACESHIP_DIR_SHOW=true
SPACESHIP_DIR_TRUNC=0
SPACESHIP_DIR_TRUNC_PREFIX=".../"
SPACESHIP_DIR_TRUNC_REPO=false
SPACESHIP_DIR_COLOR=030
SPACESHIP_DIR_PREFIX=" "
SPACESHIP_DIR_SUFFIX=""

# Char
SPACESHIP_CHAR_SYMBOL=">"
SPACESHIP_CHAR_PREFIX=""
SPACESHIP_CHAR_SUFFIX=" "
SPACESHIP_CHAR_COLOR_SUCCESS=028 # green
SPACESHIP_CHAR_COLOR_FAILURE=124 # red

SPACESHIP_PROMPT_ORDER=(
    user       # Username
    host       # Hostname
    dir        # Current director
    git        # Git (git_branch + git_status)
    hg         # Mercurial (hg_branch  + hg_status)
    venv       # Virtualenv
    exec_time  # Execution time
    exit_code  # Exit code
    line_sep   # Line break
    char       # Prompt character
)
